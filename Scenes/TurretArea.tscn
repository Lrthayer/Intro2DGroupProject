script/source = "extends Area2D
var hovering = false
var clicked = false
var locked = false
var toggled = 0
var lockToggle = 0
var menuToggle = 0

var pointValue = 10
var health = 3
var damage = 1
var fireRate = 1
var fireRateDelta = .0001

func _ready():
	set_process(true)

#called every frame
func _process(delta):
	if hovering:
		#if locked let parent node know
		if locked:
			get_parent().cursorState = \"locked\"

		if Input.is_action_pressed(\"middle_click\"):
			if lockToggle < 1:
				if locked:
					locked = false
					#tell parent to set cursor state
					self.get_parent().cursorState = \"hovering\"
					print(\"unlocked\")
				else:
					locked = true
					#tell parent to set cursor state
					self.get_parent().cursorState = \"locked\"
					print(\"locked\")
				lockToggle += 1
		else:
			lockToggle = 0
	
	if (hovering || clicked) && !locked:
		if  Input.is_action_pressed(\"left_click\"):
			if toggled < 1:
				if clicked:
					clicked = false
					print(\"false\")
				else:
					clicked = true
					print(\"true\")
				toggled += 1
		else:
			toggled = 0
				
		if clicked:
			self.set_global_pos(get_global_mouse_pos())
			#fixes spawning a new object while moving this object
			if !get_node(\"/root/Node2D\").overButton:
				get_node(\"/root/Node2D\").overButton = true
			
		if  Input.is_action_pressed(\"edit\") && !locked:
			if menuToggle < 1:
				#if already open, close
				if !self.get_node(\"TurrentMenu/VisualVBox\").is_hidden():
					self.get_node(\"TurrentMenu/StatsVBox\").set_hidden(true)
					self.get_node(\"TurrentMenu/VisualVBox\").set_hidden(true)
					self.get_node(\"TurrentMenu\").set_pos(Vector2(30000,30000))
				else:
					self.get_node(\"TurrentMenu\").set_pos(Vector2(50,-100))
					self.get_node(\"TurrentMenu/VisualVBox\").set_hidden(false)
					self.get_node(\"TurrentMenu/StatsVBox\").set_hidden(false)
					self.get_node(\"TurrentMenu/StatsVBox\").get_node(\"HPHBox/HPSpinBox\").set_value(health)
					self.get_node(\"TurrentMenu/StatsVBox\").get_node(\"DamageHBox/DamageSpinBox\").set_value(damage)
					self.get_node(\"TurrentMenu/StatsVBox\").get_node(\"FireRateHBox/FireRateSpinBox\").set_value(fireRate)
					self.get_node(\"TurrentMenu/StatsVBox\").get_node(\"FireRateDeltaHBox/FireRateDeltaSpinBox\").set_value(fireRateDelta)
				menuToggle += 1
		else:
			menuToggle = 0
		
		if  Input.is_action_pressed(\"right_click\") && !locked:
			self.get_node(\"/root/Node2D\").set_hovering(false)
			self.free()

func _on_TurretArea_mouse_enter():
	hovering = true

func _on_TurretArea_mouse_exit():
	hovering = false

func _on_health_value_changed( value ):
	health = value

func _on_damage_value_changed( value ):
	damage = value

func _on_firerate_value_changed( value ):
	fireRate = value

func _on_fireratedelta_value_changed( value ):
	fireRateDelta = value

func _on_height_value_changed( value ):
	self.set_scale(Vector2(self.get_scale().x, value))
"

